<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.dresses.CreateDressFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <TextView
        android:id="@+id/create_dress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add new Dress"
        android:textSize="24sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/create_dress_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_dress_title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Type"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/create_dress_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_dress_type"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        android:textSize="22sp" />

    <Button
        android:id="@+id/create_dress_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_dress_price"
        android:layout_marginTop="40dp"
        android:background="#F5F5F5"
        android:text="Upload photo"
        android:textSize="18sp"
        android:backgroundTint="#707070" />

    <ImageView
        android:id="@+id/create_dress_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignTop="@id/create_dress_upload_btn"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/create_dress_upload_btn" />


    <Button
        android:id="@+id/create_dress_save_btn"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="#B212BD"
        android:backgroundTint="#CE068C"
        android:text="Save"
        android:textSize="18sp" />

</RelativeLayout>
</FrameLayout>